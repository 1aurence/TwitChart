<div class="d-flex flex-column align-items-center">
  <h1>Search Tweets</h1>

  <form
    action="/tweets/search-tweets"
    method="POST"
    class="w-50"
    id="search-tweets"
  >
    <div class="form-group">
      <input
        type="text"
        name="keyword"
        class="form-control"
        id=""
        placeholder="Tweet keyword"
      />
    </div>
    <div class="form-group d-flex">
      <input
        type="date"
        name="start_date"
        class="form-control mr-2"
        id=""
        placeholder="Start Date"
      />
      <input
        type="date"
        name="end_date"
        class="form-control"
        id=""
        placeholder="End Date"
      />
    </div>
    <div class="form-group">
      <input
        type="number"
        name="amount"
        class="form-control"
        id=""
        placeholder="Amount of Tweets"
      />
    </div>
    <button type="submit" class="btn btn-primary">Get Tweets</button>
  </form>
</div>
